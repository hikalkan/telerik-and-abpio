@page
@model TelerikComponents.Web.Pages.IndexModel
@using TelerikComponents.Web.Menus
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Microsoft.AspNetCore.Mvc.Localization
@using TelerikComponents.Localization
@using Volo.Abp.Users
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<TelerikComponentsResource> L
@inject ICurrentUser CurrentUser
@{
    ViewBag.PageTitle = L["Home"];
    PageLayout.Content.Title = L["Home"].Value;
    PageLayout.Content.MenuItemName = TelerikComponentsMenus.Home;
}

<abp-card>
    <abp-card-header>@L["Welcome"]</abp-card-header>
    <abp-card-body>
        <p>@L["LongWelcomeMessage"]</p>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login">@L["Login"]</a>
        }

        <hr />
        <p class="text-right"><a href="https://abp.io?ref=tmpl" target="_blank">abp.io</a></p>

        <kendo-numerictextbox name="currency" format="c" min="0" deferred="true"
                              enable="true" max="100" value="30">
        </kendo-numerictextbox>
    </abp-card-body>
</abp-card>

@section scripts {
    @Html.Kendo().DeferredScripts(true)
} 
